<%= link_to 'Back to home', posts_path %>
<h2><%= @post.headline %></h2>
<p>Posted on <%= @post.created_at.strftime("%d %b %y") %></p>
<p><%= @post.category %></p>
<p><%= @post.content %></p>
<% if can? :update, @post %>
<%= link_to 'Edit', edit_post_path(@post) %>
<% end %>
<% if can? :destroy, @post %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>
<%= link_to 'Add comment', new_post_comment_path(@post) %>
<br>
<h2>Comments</h2>
<hr>
<% @post.comments.each do |comment| %>
  <p><%= comment.author %></p>
  <p>Posted on <%= comment.created_at.strftime("%d %b %y") %></p>
  <p><%= comment.entry %></p>
  <% if can? :update, comment %>
  <%= link_to 'Edit', edit_post_comment_path(@post, comment) %>
  <% end %>
  <% if can? :destroy, comment %>
  <%= link_to 'Delete', post_comment_path(@post, comment), method: :delete, data: {confirm: 'Are you sure?'} %>
  <% end %>
<% end %>
